---
import Logo from "@/assets/logo.svg";
import MainNav from "./MainNav.astro";
interface Props {
  subtitle: string;
  bgImage: string;
}
const { bgImage, subtitle } = Astro.props;
---

<header class="min-h-72 relative pb-72">
  <div
    class="inset-0 absolute bg-center bg-cover"
    style={{ backgroundImage: `url(${bgImage})` }}
  >
  </div>
  <div class="absolute inset-0 bg-black/60"></div>
  <div
    class="relative max-w-7xl mx-auto py-3 "
  >
    <div class="flex flex-col items-center lg:flex-row lg:justify-between">
      <a href="/" class="block">
        <Logo class="w-72 pb-5" />
      </a>
      <MainNav />
    </div>
    <h1 class="text-4xl font-black text-white text-center mt-12">{subtitle}</h1>
  </div>
</header>

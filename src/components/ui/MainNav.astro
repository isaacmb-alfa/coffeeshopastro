---
const navigation = [
  {name: 'Inicio', href: '/' },
  {name: 'Nosotros', href: '/nosotros/' },
  {name: 'Blog', href: '/blog/' },
  {name: 'Proceso', href: '/proceso/' },
  {name: 'Menú', href: '/menu/' },
  {name: 'Galería', href: '/galeria/' },
  {name: 'Contacto', href: '/contacto/' },
]
---

<nav class="flex flex-col items-center justify-end lg:flex-row space-x-5">
  {navigation.map(({name, href}) => (
    <a href={href} class="uppercase text-lg font-bold text-white">
      {name}
    </a>
  ))}
</nav>

---
import { pageAPIResponse } from "@/hooks/apiresponse";
const menuItems = await pageAPIResponse(
  "/products?product_category=5&product_category_exclude=6",
  "menu"
);
import MenuItem from "./MenuItem.astro";


console.log(menuItems.items[0].medium);
---

<div class="">
  <h4 class="text-white font-black text-4xl uppercase text-center my-10">
    Caf√©
  </h4>
  <ul class="space-y-3">
    {menuItems && menuItems.items && menuItems.items.length > 0 ? (
      menuItems.items.map((item) => (
        <MenuItem key={item.id} title={item.title} description={item.acf.description} price={item.acf.price} imagen={item.medium} />
      ))
    ) : (
      <li class="text-white text-2xl">No hay productos disponibles</li>
    )}
  </ul>
</div>

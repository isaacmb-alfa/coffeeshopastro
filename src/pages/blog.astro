---
import Layout from '@/layouts/Layout.astro';
import { pageAPIResponse } from "@/hooks/apiresponse";
import BlogPost from '@/components/blog/BlogPost.astro';

const endpoint = "/pages?slug=blog";
const { title, subtitle, medium_large, content, full } = await pageAPIResponse(endpoint);
---
<Layout title={title} subtitle={subtitle} bgImage={full.url}>
    <div
      set:html={content}
      class="order-2
      text-xl
      py-3
      mt-10
      lg:mt-0"
    />
  </div>
  <BlogPost />
</Layout>
